{
	"extends": "@tsconfig/svelte/tsconfig.json",
	"compilerOptions": {
		"strict": true,
		"module": "ESNext",
		"target": "ESNext",
		"moduleResolution": "Node",
		"isolatedModules": true,
		"esModuleInterop": true,
		"allowJs": false,
		"noEmit": true // âœ… PREVENTS js file generation
	},
	"include": ["src/**/*"],
	"exclude": ["node_modules", "dist"]
}
